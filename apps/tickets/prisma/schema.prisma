generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client-tickets"
  binaryTargets = ["darwin-arm64", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  tickets   Ticket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model Ticket {
  id        Int      @id @default(autoincrement())
  eventId   Int
  userId    Int?
  status    TicketStatus @default(AVAILABLE)
  seat      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id])
}
